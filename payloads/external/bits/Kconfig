if GRUB_BITS

choice
	prompt "BITS version"
	default BITS_STABLE

config BITS_STABLE
	bool "bits-2079"
	help
	  Stable BITS version

config BITS_MASTER
	bool "master"
	help
	  Newest BITS version

config BITS_REVISION
	bool "git revision"
	help
	  Select this option if you have a specific commit or branch
	  that you want to use as the revision from which to
	  build BITS.

	  You will be able to specify the name of a branch or a commit id
	  later.

endchoice

config BITS_REVISION_ID
	string "Insert a commit's SHA-1 or a branch name for BITS"
	depends on BITS_REVISION
	default "origin/master"
	help
	   The commit's SHA-1 or branch name of the revision to use.

endif
